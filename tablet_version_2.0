;bookxnote
global hand:=true
global pen:=true
^!F1::reload
#ifwinactive ahk_exe BookxNotePro.exe
				+space::send {PgUp}
				r::
				if hand
				send {pgdn}
				else
				send r
				return
				return
				e::
				if hand
				send {pgup}
				else
				send e
				return
				return
				t::
				if hand
				send {down}
				else
				send t
				return
				return
				w::
				if hand
				send {up}
				else
				send w
				return
				return
				j::
				if hand
				send {down}
				else
				send j
				return
				return
				k::
				if hand
				send {up}
				else
				send k
				return
				return
				
	;pen using

	^r::
		if (hand)
			{
			send ^r
			; msgbox 1
			hand:=NOT(hand)
			pen:=true
			}
		else
			{
			send ^a
			hand:=NOT(hand)
			pen:=true
			}
		return
	return
	
	^e::
		if(pen)
		{
			send ^e
			pen:=NOT(pen)
			hand:=true
		}
		else 
		{
			send ^u
			pen:=NOT(pen)
			hand:=true
		}
		return
	return
return
